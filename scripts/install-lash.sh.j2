#!/bin/bash
set -euo pipefail

# Install Python 3 runtime needed by lash's embedded REPL setup.
if command -v apk >/dev/null 2>&1; then
  apk add --no-cache python3 py3-pip bash curl
elif command -v apt-get >/dev/null 2>&1; then
  apt-get update
  apt-get install -y python3 python3-pip bash curl
else
  echo "Unsupported distribution (need apk or apt-get)" >&2
  exit 1
fi

chmod +x /installed-agent/lash
ln -sf /installed-agent/lash /usr/local/bin/lash
